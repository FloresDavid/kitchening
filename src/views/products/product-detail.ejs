<!DOCTYPE html>
<html lang="ES">

<%- include('../partials/head',{
	title : 'Detalle'
}) %>


<body>
	<%- include('../partials/header') %>
	<main class="row">
		<div class="col-12 col-md-10 col-lg-8 mx-auto">
			<div class="card my-5" style="background-color: rgba(255, 255, 255, 0.5);">
				<div class="card-body d-flex gap-4">
					<div>
						<img src="/images/<%= mainImage %>" alt="">
					</div>
					<div>
						<h3><%= name %></h3>
						<hr>
						<h5><a href="" class="text-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-map-location-dot"></i></a> <%= address %></h5>
						<p><%= description %></p>
					</div>
					<%- include('../partials/modal-show-map-detail') %>
				</div>
			</div>
		</div>

	</main>

	<%- include('../partials/footer') %>

</body>
</html>